{
  "name": "@tvacherat/sift-serializer",
  "version": "1.0.1",
  "description": "A too to serialize a raw Sift condition object into an AST representation that can be easily manipulated, and deserializes the AST back into a raw Sift condition object.",
  "keywords": [
    "sift"
  ],
  "homepage": "https://github.com/tvacherat/sift-serializer#readme",
  "bugs": {
    "url": "https://github.com/tvacherat/sift-serializer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tvacherat/sift-serializer.git"
  },
  "license": "ISC",
  "author": "tvacherat",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && npm run format:check",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
